extends layout

block scripts
    script(type='text/javascript').
        function confirmUnsubscribe() {
            return confirm("This action will render the current API key unusable. Are you sure you want to unsubscribe from the API?");
        }
        function confirmDeleteSubscriptions() {
            if (confirm("This action will delete ALL subscriptions to the current API. Are you 100% sure you want to do this?"))
                return confirm("Please confirm once more that you really want to delete all current subscriptions.");
            return false;
        }

block bodyScripts
    script(type='text/javascript').
        // Enable Popovers
        $(document).ready(function(){
            $('[data-toggle="popover"]').popover(); 
        });
        //Extacting the Paragraph values and Check for disabling subscribe button!
        var pValue = $('#skusId').text().trim();
        if (pValue === '') {
            // Hide all buttons when pValue is empty
            let allButtons = document.getElementById('application-subs-list').getElementsByTagName("button");
            for (let i = 0; i < allButtons.length; i++) {
                allButtons[i].disabled = true;
            }
        } else {
            // Iterate over buttons and disable specific ones
            let subscriptionButtons = document.getElementById('application-subs-list').getElementsByTagName("button");
            for (let i = 0; i < subscriptionButtons.length; i++) {
                if (subscriptionButtons[i].id == "subscribeButton" && subscriptionButtons[i].value == 'true') {
                    subscriptionButtons[i].disabled = true;
                }
            }
        }
    script.
        document.addEventListener('DOMContentLoaded', function () {
              // Get the first element with the 'api-link' class
              var firstApiLink = $('.api-link:first');                
              // Extract the API value from the data attribute
              var selectedApiValue = firstApiLink.data('api-value');                
               // Set the iframe source and show the panel
              var iframeSrc = `/apis/${selectedApiValue}`;
              $('#investigationalDrugPanel1 iframe').attr('src', iframeSrc);
              $('#investigationalDrugPanel1').show();                                
              
              // Handle click events on '.api-link'
              $('.api-link').on('click', function() {
                var selectedApiValue = $(this).data('api-value');
                var iframeSrc = `/apis/${selectedApiValue}`;
                if (selectedApiValue !== ``){
                     $('#investigationalDrugPanel1 iframe').attr('src', iframeSrc);  
                    $('#investigationalDrugPanel1').show();
                }
                else {
                    $('#investigationalDrugPanel1').hide();
                }

            });
        });
            //it increase the hieght of iframe based scrolling height of body which it loads
            const iframe = document.getElementById('myIframe');
            function adjustIframeHeight() {
            const contentHeight = iframe.contentWindow.document.body.scrollHeight;
            iframe.style.height = contentHeight + 'px';
            }
            iframe.onload = adjustIframeHeight;

